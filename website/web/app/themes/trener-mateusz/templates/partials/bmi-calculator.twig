<div class="bmi-calculator">
    <div class="bmi-calculator__wrapper">
        <div class="bmi-calculator__header">
            <p class="bmi-calculator__sub-title">Kalkulator BMI</p>
            <h3 class="bmi-calculator__title">Oblicz swój <br> body mass index</h3>
        </div>

        <form class="bmi-calculator__data">
            <input class="basic-input" type="number" placeholder="Wzrost / cm" id="height" required>
            <input class="basic-input" type="number" placeholder="Waga / kg" id="weight" required>
            <input class="basic-input" type="number" placeholder="Wiek" id="age" required>
            {% include 'partials/basic-select.twig' with {
                label: 'Twoja płeć',
                items: [
                    {
                        label: "Mężczyzna",
                        value: "m"
                    },
                    {
                        label: "Kobieta",
                        value: "w"
                    },
                    {
                        label: "Inna",
                        value: "o"
                    }
                ],
                id: 'gender',
                required: true
            } %}
            {% include 'partials/basic-select.twig' with {
                label: 'Twoja aktywność',
                items: [
                    {
                        label: 'Mała lub brak / siedząca praca',
                        value: 1.2
                    },
                    {
                        label: 'Mała / fizyczna praca',
                        value: 1.375
                    },
                    {
                        label: 'Spora / 1-3 treningów tyg.',
                        value: 1.55
                    },
                    {
                        label: 'Duża / 3-5 treningów tyg.',
                        value: 1.725
                    },
                    {
                        label: 'Ogromna / 6-7 treningów tyg.',
                        value: 1.9
                    }
                ],
                id: 'activity',
                required: true
            } %}
            {% include 'partials/basic-button.twig' with {
                text: 'Sprawdź',
                id: 'calculate-button',
                class: 'ml-auto',
            } %}
        </form>

        <div class="bmi-calculator__result">
            <div id="summary"></div>
            <div class="under-summary">
                <h4 id="header"></h4>
                <p id="message"></p>
                {% include 'partials/basic-button.twig' with {
                    text: 'Zacznijmy',
                    variant: 'dark'
                } %}
            </div>
        </div>
    </div>
</div>
